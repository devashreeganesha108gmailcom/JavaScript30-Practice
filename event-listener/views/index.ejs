<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Understanding JavaScript's Capture</title>
  <link href="/css/styles.css" rel="stylesheet" type="text/css">  
</head>
<body class="bod">
  <div class="one">
    <div class="two">
      <div class="three">
      </div>
    </div>
  </div>
<button></button>
<script>
  document.querySelectorAll('div').forEach(div => div.addEventListener('click', (e)=>{
    console.log(this.classList.value);
    // e.stopPropagation(); // stop bubbling!
    // console.log(this);
  }, {
    capture: true,
    once: false
  }));
  document.querySelector('button').addEventListener('click', () => {
    console.log('Click!!!');
  }, {
    once: false
  });
</script>
</body>
</html>
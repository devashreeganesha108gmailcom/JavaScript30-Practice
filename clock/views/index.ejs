<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>JS+CSS Clock</title>
        <link href="/css/styles.css" rel="stylesheet" type="text/css">  
    </head>
    <body>
        <div class="clock">
            <div class="clock-face">
                <div class="hand hour-hand">
                </div>
                <div class="hand min-hand">
                </div>
                <div class="hand second-hand">
                </div>
             </div>
        </div>
    <script>
        setInterval(()=>{
            document.querySelector('.second-hand').style.transform = `rotate(${((new Date().getSeconds() / 60) * 360) + 90}deg)`;
            document.querySelector('.min-hand').style.transform = `rotate(${((new Date().getMinutes() / 60) * 360) + ((new Date().getSeconds()/60)*6) + 90}deg)`;
            document.querySelector('.hour-hand').style.transform = `rotate(${((new Date().getHours() / 12) * 360) + ((new Date().getMinutes() / 60) * 30) + 90}deg)`;
        },1000);
    </script>
    </body>
</html>